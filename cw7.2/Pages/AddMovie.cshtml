@page
@model cw7.Pages.AddMovieModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>
<body>
    <h1>Dodaj nowy film</h1>
    <form asp-page="AddMovie" method="post">
        <span>
            <label asp-for="@Model.Movie.Title"></label>
            <input asp-for="@Model.Movie.Title" type="text">
            <span asp-validation-for="@Model.Movie.Title"></span>
        </span>
        <span>
            <label asp-for="@Model.Movie.Director"></label>
            <input asp-for="@Model.Movie.Director" type="text">
            <span asp-validation-for="@Model.Movie.Director"></span>
        </span>
        <span>
            <label asp-for="@Model.Movie.ReleaseDate"></label>
            <input asp-for="@Model.Movie.ReleaseDate" type="date">
            <span asp-validation-for="@Model.Movie.ReleaseDate"></span>
        </span>
        <span>
            <label asp-for="@Model.Movie.Genre"></label>
            <input asp-for="@Model.Movie.Genre" type="text">
            <span asp-validation-for="@Model.Movie.Genre"></span>
        </span>
        <span>
            <label asp-for="@Model.Movie.Price"></label>
            <input asp-for="@Model.Movie.Price" type="number" step="0.01">
            <span asp-validation-for="@Model.Movie.Price"></span>
        </span>
        <span>
            <input asp-for="@Model.Movie" type="submit" value="Dodaj">
        </span>
    </form>
</body>
</html>